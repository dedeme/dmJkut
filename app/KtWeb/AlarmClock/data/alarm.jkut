/// Alarm data.

import "i18n";

II = i18n.tlt;

/// Constructor.
///   id: Identifier.
///   tm: Time (milliseconds) with minute precision.
/// \s,n -> <alarm>
mk : id, tm;

/// \<alarm> -> s
timeToStr = \a -> {
  :time now = time.now();
  return (now.day() == time.day(a[tm])
      ? II("Today")
      : II("Tomorrow")
    ) +
    " " + II("at") + " " + time.fmt(a[tm], "%t")[:-3]
  ;
};
