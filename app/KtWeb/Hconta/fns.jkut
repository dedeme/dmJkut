/// Global functions.

/// Cut an string appending '...' if it is neccessary.
/// \s -> s
cutRight = \s, len -> return str.len(s) <= len
    ? s
    : s[:len-3] + "..."
  ;;

/// Returns the float value of 'n', parsing "" as 0.
/// \s -> ([n]|[])
float = \n -> {
  n2 = str.replace(
    str.replace(
      str.trim(n),
      ".", ""
    ),
    ",", "."
  );
  if (n2 == "") return [0];
  rOp = math.fromStr(n2);
  if (!rOp) return rOp;
  return [math.round(rOp!, 2)];
};

