/// Settings page

import "changePass";
import "i18n";

Q = ui.q;
II = i18n.tlt;

/// \<domo> -> ()
mk = async \wg -> {
  Rp = await client.send ({
    prg: "Main",
    source: "Settings",
    rq: "getLang"
  });
  lang = Rp.lang;

  Show = [[]];

  // Control -------------------------------------------------------------------

  // \<event> -> ()
  changeLang = async \ev -> {
    await client.ssend({
      prg: "Main",
      source: "Settings",
      rq: "setLang",
      lang: lang == "es" ? "en" : "es"
    });
    window.location.reload(true);
  };

  // \<event> -> ()
  onChangePass = \ev -> {
    changePass.mk(wg, \-> mk(wg););
  };

  // View ----------------------------------------------------------------------

  Show! = \ -> {
    wg
      .removeAll()
      .add(Q("div")
        .style("text-align:center")
        .add(Q("div")
          .klass("head")
          .html(II("Settings")))
        .add(Q("table")
          .att("align", "center")
          .add(Q("tr")
            .add(Q("td")
              .klass("frame")
              .add(Q("div")
                .add(ui.link(changeLang)
                  .klass("link")
                  .html(i18n.fmt(
                    II("Change Language to %0"),
                    [lang == "es" ? "EN" : "ES"]
                  ))))
              .add(Q("p")
                .html("<p></p>"))
              .add(Q("div")
                .add(ui.link(onChangePass)
                  .klass("link")
                  .html(II("Change Password"))))))))
    ;
  };

  Show!();
};
